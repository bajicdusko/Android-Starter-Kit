<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">@color/defaultTextColor</item>
        <item name="android:textColorLink">@color/colorPrimary</item>
    </style>

    <style name="AppTheme.Toolbar">
        <item name="android:background">@color/colorPrimary</item>
    </style>

    <style name="ParentButton" parent="Widget.AppCompat.Button">
        <item name="android:textSize">@dimen/defaultTextSize</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="DefaultButton" parent="ParentButton">
        <item name="colorButtonNormal">@color/colorPrimary</item>
    </style>
</resources>
